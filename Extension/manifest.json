{
    "manifest_version": 3,
    "name": "X Account Location Revealer",
    "version": "1.0",
    "description": "Displays the 'Account based in' location directly on X (Twitter) user profiles.",
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}